{
  "productName": "2Password",
  "version": "1.0.0",
  "identifier": "com.twopassword.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "security": {
      "csp": "default-src 'self' data: https: tauri: 'unsafe-eval' 'unsafe-inline'; connect-src ipc: http://ipc.localhost"
    },
    "windows": [
      {
        "title": "2Password",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "skipTaskbar": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "2Password Team",
    "category": "Productivity",
    "shortDescription": "A modern password manager",
    "longDescription": "2Password is a secure, modern password manager with Touch ID integration and zero-knowledge encryption.",
    "copyright": "Copyright (c) 2025 2Password Team",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {}
}
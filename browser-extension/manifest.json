{
  "manifest_version": 3,
  "name": "TwoPassword - Secure Password Manager",
  "version": "1.0.0",
  "description": "A secure password manager with Touch ID integration and advanced security features",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "TwoPassword",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "css": ["src/content/content-script.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "notifications",
    "nativeMessaging",
    "alarms"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "options_page": "src/options/options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/injected-script.js",
        "icons/*.png",
        "src/popup/popup.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "default_locale": "en",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-ancestors 'none';"
  },
  
  "externally_connectable": {
    "matches": ["https://localhost:*/*"]
  },
  
  "commands": {
    "toggle_password_generator": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Toggle password generator"
    },
    "auto_fill_login": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Auto-fill login credentials"
    },
    "save_credentials": {
      "suggested_key": {
        "default": "Ctrl+Shift+S", 
        "mac": "Command+Shift+S"
      },
      "description": "Save login credentials"
    }
  }
}
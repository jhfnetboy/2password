# TwoPassword Environment Configuration
# Copy this file to .env and modify values as needed

# Application Settings
RUST_LOG=info
RUST_BACKTRACE=1

# Default vault location (can be overridden by CLI)
TWOPASSWORD_VAULT_PATH=~/.twopassword/vault.enc

# Touch ID / Biometric Settings (macOS only)
TWOPASSWORD_ENABLE_TOUCHID=true
TWOPASSWORD_TOUCHID_REASON="TwoPassword needs to access your passwords"

# Security Settings
TWOPASSWORD_TIMEOUT_MINUTES=15
TWOPASSWORD_AUTO_LOCK=true

# Development Settings (only used in debug builds)
TWOPASSWORD_DEBUG_MODE=false
TWOPASSWORD_SKIP_INTEGRITY_CHECK=false

# Testing Settings
TWOPASSWORD_TEST_VAULT_PATH=/tmp/twopassword_test_vault.enc